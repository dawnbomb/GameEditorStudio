<Window x:Class="GameEditorStudio.EventsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameEditorStudio"
        mc:Ignorable="d"
        Title="Events" Height="900" Width="1000">
    <Grid Style="{DynamicResource BorderGrid}" Background="#333333">
        <ContentControl Margin="10,10,0,0" HorizontalAlignment="Left" Width="270" Height="250" VerticalAlignment="Top">
            <DockPanel>
                <Border Style="{DynamicResource ContentBorder}" DockPanel.Dock="Top">
                    <DockPanel Style="{DynamicResource ContentBar}">
                        <Label Content="Events" FontWeight="Bold"/>
                        <Button Content="New Event" HorizontalAlignment="Right" Margin="10,3,4,0" VerticalAlignment="Top" Width="110" Click="CreateNewEvent" Height="30"/>
                    </DockPanel>
                </Border>
                
                <TreeView x:Name="EventListTree" SelectedItemChanged="EventTreeSelectedItemChanged"  DockPanel.Dock="Top" />
            </DockPanel>
        </ContentControl>

        <ContentControl Margin="10,270,0,0" HorizontalAlignment="Left" Width="270" Height="220" VerticalAlignment="Top">
            <DockPanel>
                <Border Style="{DynamicResource ContentBorder}" DockPanel.Dock="Top">
                    <DockPanel Style="{DynamicResource ContentBar}">
                        <Label Content="Event Info" FontWeight="Bold"/>
                    </DockPanel>
                </Border>                
                <DockPanel DockPanel.Dock="Top" Margin="5,0,5,0">
                    <Label Content="Name:"/>
                    <TextBox Name="EventNameBox" DockPanel.Dock="Left"  Margin="5"  Text=" Name" Width="180" KeyDown="RenameEvent" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="10,2,10,0" Height="30">
                    <Button Content="Delete Event" DockPanel.Dock="Right"    Width="135" Click="DeleteEventButton" />
                    <Button Content="Run Event" DockPanel.Dock="Left" HorizontalAlignment="Left"   Width="108" Click="RunEventButton"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="10,5,10,0" Height="30">
                    <Button Content="Move up" DockPanel.Dock="Left"    Width="108" Click="ButtonMoveEventUp" />
                    <Button Content="Move Down" DockPanel.Dock="Right"  HorizontalAlignment="Right"   Width="135" Click="ButtonMoveEventDown" Margin="0,0,0,0" />
                </DockPanel>







                <TextBox Name="EventTooltipBox" DockPanel.Dock="Bottom"   Margin="10,8,10,8"  Text=" Note" TextChanged="EventTooltipTextChanged"  />
            </DockPanel>
        </ContentControl>



        <ContentControl Margin="295,10,10,0" Height="480" VerticalAlignment="Top">            
            <DockPanel>
                <Border Style="{DynamicResource ContentBorder}" DockPanel.Dock="Top">
                    <DockPanel Style="{DynamicResource ContentBar}" LastChildFill="False">
                        <Label Content="Commands" FontWeight="Bold" DockPanel.Dock="Left"/>
                        <Button Content=" Open the Eventing Tutorial " Margin="3" DockPanel.Dock="Right" Click="OpenEventingTutorial"/>
                    </DockPanel>
                </Border>

                <DockPanel Name="EventCommandsDockPanel" LastChildFill="False"  Style="{DynamicResource DockList}"/>
            </DockPanel>
        </ContentControl>

        <ContentControl Grid.Column="0" Margin="10,500,10,10">
            <local:EventResources x:Name="EventResourceManager"/>
        </ContentControl>
        


    </Grid>
</Window>
