<Application x:Class="GameEditorStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windows/TermsAndConditions.xaml"
             xmlns:local="clr-namespace:GameEditorStudio">
             <!--xmlns:local="clr-namespace:Crystal_Editor"
             xmlns:properties="clr-namespace:Crystal_Editor.Properties"-->
                          

    <!--List of styles used in this program. A style is basically a cosmetic skin, or how something visually looks. 
    This is just an index of them, each relevant file has the code for it's own style.-->
    
    <Application.Resources>   
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PixelWPF;component/PixelDictionary.xaml" />

                <ResourceDictionary Source="Styles/GES Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Window}" BasedOn="{StaticResource DarkModeWindowStyle}"/>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
