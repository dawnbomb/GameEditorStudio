<UserControl x:Class="GameEditorStudio.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameEditorStudio"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="900">
    <DockPanel Name="BackPanel">
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:FileManager x:Name="TextFileManager"  Grid.Column="0"    />

            <GridSplitter Style="{DynamicResource SplitterVertical}" Grid.Column="1" Background="Transparent"  />

            <ScrollViewer Grid.Column="2" Background="Transparent">
                <DockPanel Background="Transparent" >
                    <TextBox Name="TheLineBox" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" DockPanel.Dock="Left" IsReadOnly="True" MinWidth="30"/>
                    <TextBox Name="TheTextBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" DockPanel.Dock="Left" TextChanged="TextBoxTextChanged"  AcceptsReturn="True"/>
                </DockPanel>
            </ScrollViewer>

        </Grid>
    </DockPanel>
</UserControl>
