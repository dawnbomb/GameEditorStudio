                                                        <Label Name="LabelTextSize" Content="Text Size" Grid.Row="3" Grid.Column="1" Margin="0"/>
                                                        <TextBox x:Name="PropertiesEditorNameTableTextSize" Grid.Row="3" Grid.Column="2" Margin="3" TextWrapping="Wrap" Text="Text Size" KeyDown="ChangeNameTableTextSize"/>

                                                        <Label Content="Name Count" Grid.Row="5" Grid.Column="1" Margin="0"/>
                                                        <TextBox x:Name="PropertiesEditorNameCount" Grid.Row="5" Grid.Column="2" Margin="3" TextWrapping="Wrap" Text="Item Count"  KeyDown="ChangeNameTableNameCount"/>
                                                    </Grid>
                                                </DockPanel>
                                            </Border>

                                            <Border DockPanel.Dock="Top">
                                                <DockPanel>
                                                    <DockPanel Style="{DynamicResource HeaderDock}" DockPanel.Dock="Top"  >
                                                        <Label Content="Data Table" FontWeight="Bold" Margin="5,0,0,0"  />
                                                    </DockPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="5"/>
