        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="455"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>



        <DockPanel Grid.Column="0" Grid.ColumnSpan="5"  Grid.RowSpan="1"  Margin="0,0,0,0" Style="{DynamicResource BorderDock}"  >
            <local:TopMenu x:Name="MenusForToolsAndEvents"  Margin="10,0,0,0"  DockPanel.Dock="Right"  Grid.Column="0" Grid.ColumnSpan="5"  Grid.RowSpan="1"/>
        </DockPanel>


        <Grid DockPanel.Dock="Top"   Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Margin="0,0,0,0"  Style="{DynamicResource BorderGrid}" >


            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Margin="0,0,0,0" BorderThickness="0,2,0,0"  Grid.RowSpan="1" VerticalAlignment="Bottom" >
                <Border BorderThickness="0,2,0,0" BorderBrush="#FF575757">

                </Border>
            </Border>

            <DockPanel Background="Transparent" >
                <Button DockPanel.Dock="Left" x:Name="ButtonHome"     Click="ButtonHome_Click" Margin="10,0,4,0"  Style="{DynamicResource ButtonEditorTab}">
                    <Label Content=" ⛫ Home " />
                </Button>
                <ScrollViewer  DockPanel.Dock="Left" x:Name="EditorBarScrollViewer" Background="Transparent" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" PreviewMouseWheel="EditorBarMouseWheel" >
                    <!--Background="#FF272A2B"-->
                    <DockPanel x:Name="EditorBar" Background="{x:Null}" LastChildFill="False" />
                </ScrollViewer>
            </DockPanel>
        </Grid>



        <DockPanel   Grid.Row="3" Grid.Column="0" Grid.RowSpan="1"  Grid.ColumnSpan="5"  DockPanel.Dock="Top" Style="{DynamicResource HeaderDock}" LastChildFill="False" Background="#333333" >


            <DockPanel  Background="{x:Null}" Margin="0,4,0,4">
                <Button Content=" I-ID " DockPanel.Dock="Left" Click="ToggleItemIDNumberVisibility" Margin="10,0,5,0" ToolTip="Toggles item ID numbers. &#xD;&#xA;ID numbers are shown using the real, internal game data order, not the order you arrange them in. &#xD;&#xA;If you didn't know, you can drag items around and reorder them!&#xD;&#xA;Anyway, because the ID numbers can become almost useless, you have the option to turn them off."/>
                <Button Content="アA" Width="45" DockPanel.Dock="Left" x:Name="TranslationToggle" Style="{DynamicResource ButtonError}"  Click="ToggleTranslationPanel" Margin="2,0,2,0" ToolTip="Toggles the translation panel.&#xD;&#xA;This is an upcoming feature, and will be useful for people making english patches."/>

                <Button Content=" 🔍 " DockPanel.Dock="Left" x:Name="EntryAddressButton2"  Click="ToggleEntrySynbology" Margin="2,0,2,0" ToolTip="Toggles Symbology. &#xD;&#xA;Symbology tries to tell you information useful for discovering what an entry byte actually does. &#xD;&#xA;You can mouseover an entry symbol to learn more detailed information." Width="42"/>
                <Button Content=" E-ID " Visibility="Collapsed" DockPanel.Dock="Left" x:Name="EntryAddressButton"  Click="EntryAddressToggle" Margin="2,0,2,0" ToolTip="Toggles the display of Entry ID numbers. &#xD;&#xA;The number represents what byte # the entry is, for the row it's in.&#xD;&#xA;For nerds, this is a Byte's Offset Value. " Width="58"/>
                <Button DockPanel.Dock="Left" x:Name="EntryAddressTypeButton" Content="DEC" Width="50" Click="EntryAddressType" Margin="2,0,2,0" ToolTip="Changes the Entry ID number between displaying... &#xD;&#xA;in Decimal (Numbers 0~9) &#xD;&#xA;and Hex (Numbers 00~FF). "/>
                <TextBox DockPanel.Dock="Left" x:Name="EntryAddressOffsetTextbox" Text="0" Width="35" Margin="2,1,2,1" KeyDown="EntryOffsetTextboxKeyDown" ToolTip="This textbox value (after pressing enter) will make each entry-ID APPEAR as if it's offset ID was +/- X number. Such as -3 or +5. &#xD;&#xA;It does not actually change the offset of any entrys, only the appearence." />
                <Button Content="👁"  DockPanel.Dock="Left" x:Name="EntryHiddenToggle"   Click="ToggleHiddenEntrys" Margin="2,0,2,0" ToolTip="Toggles the visibility of hidden entrys. &#xD;&#xA;When visable, a hidden entry will appear red. &#xD;&#xA;Note that any entrys that represent text are forced to hidden when the workshop opens, even if you set them not to be." Width="38"/>

                <Button Content="👁️‍🗨️"  DockPanel.Dock="Left" x:Name="DebugShowALL"   Click="ToggleDebugShowALL" Margin="2,0,2,0" ToolTip="Makes EVERYTHING visable. &#xD;&#xA;This button only exists in debug mode." Width="38"/>




            </DockPanel>
        </DockPanel>




        <GridSplitter Style="{DynamicResource SplitterVertical}" Grid.Column="2" Grid.Row="4" Grid.RowSpan="3" Width="12"  />

