<Window x:Class="GameEditorStudio.Workshop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:GameEditorStudio"
        mc:Ignorable="d"
        Title="Crystal Editor    Version: Etrian HD Demo 1" Height="900" Width="1580">





    <Grid x:Name="GridBack" Style="{DynamicResource BorderGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto" MinHeight="60"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="455"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>



        <DockPanel Grid.Column="1" Grid.ColumnSpan="3"  Grid.RowSpan="1" LastChildFill="False" Margin="0,6,0,6" Style="{DynamicResource BorderDock}" >
            <local:MainMenu x:Name="MenusForToolsAndEvents"  />


            <DockPanel Background="#FF382E4E" Margin="0,0,0,0">
                <Label Content="Dec to Hex:" Margin="0,-2,0,0"/>
                <TextBox  Width="75" Margin="5,2,5,2" TextChanged="TextBoxDecConvert" Name="DecBox"/>
                <TextBox  Width="75" Margin="5,2,5,2" TextChanged="TextBoxHexConvert" Name="HexBox"/>
            </DockPanel>

            <local:TopEastMenu DockPanel.Dock="Right" ></local:TopEastMenu>
        </DockPanel>


        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Margin="0,0,0,5">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Button DockPanel.Dock="Left" x:Name="ButtonHome" Content=" Home "    Click="ButtonHome_Click" Margin="3,2,0,2"/>
                    <ScrollViewer  DockPanel.Dock="Left" x:Name="EditorBarScrollViewer" Background="#FF272A2B" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" PreviewMouseWheel="EditorBarMouseWheel">
                        <DockPanel x:Name="EditorBar" Background="{x:Null}" LastChildFill="False" >

                        </DockPanel>
                    </ScrollViewer>
                </DockPanel>
                
                <DockPanel DockPanel.Dock="Top" Style="{DynamicResource HeaderDock}" LastChildFill="False">

                    
                    <DockPanel  Background="{x:Null}" Margin="0,2,0,2">
                        <Button Content=" I-ID " DockPanel.Dock="Left" Click="ToggleItemIDNumberVisibility" Margin="5,0,5,0" ToolTip="Toggles if the item list displays item ID numbers. ID numbers are shown using the real, internal game data order, not the order you arrange them in."/>
                        <Button Content="アA" Width="35" DockPanel.Dock="Left" x:Name="TranslationToggle" Style="{DynamicResource ButtonError}"  Click="ToggleTranslationPanel" Margin="2,0,2,0" ToolTip="Toggles the translation panel, which lets you see the origonal item's name translated to english using diffrent translation tools. Useful for creating english menu patches for JRPGs."/>
                        
                        <Button Content="🔍" DockPanel.Dock="Left" x:Name="EntryAddressButton2"  Click="ToggleEntrySynbology" Margin="2,0,2,0" ToolTip="Toggles Symbology to appear or not. Symbology is actually really useful and quickly tells you information about a entry across the entire editor. VERY useful when first creating a editor to help learn what each value might represent."/>
                        <Button Content=" E-ID " DockPanel.Dock="Left" x:Name="EntryAddressButton"  Click="EntryAddressToggle" Margin="2,0,2,0" ToolTip="Display Entry ID numbers. The number represents what byte # the entry is for in a row."/>
                        <Button DockPanel.Dock="Left" x:Name="EntryAddressTypeButton" Content="DEC" Width="40" Click="EntryAddressType" Margin="2,0,2,0" ToolTip="Changes the Entry ID number between displaying in Decimal (Numbers 0~9) and Hex (Numbers 00~FF). "/>
                        <TextBox DockPanel.Dock="Left" x:Name="EntryAddressOffsetTextbox" Text="0" Width="35" Margin="2,1,2,1" KeyDown="EntryOffsetTextboxKeyDown" ToolTip="This textbox makes each entry ID appear as +/- X number. Such as -3 or +5. Useful for debugging, and not much else. " />
                        <Button Content="👁" DockPanel.Dock="Left" x:Name="EntryHiddenToggle"   Click="ToggleHiddenEntrys" Margin="2,0,2,0" ToolTip="Toggles entrys tagged as Hidden between being Visible or Hidden. When visable they appear red."/>
                        

                        

                    </DockPanel>
                </DockPanel>
                
            </DockPanel>
        </Border>




        <GridSplitter Style="{DynamicResource SplitterVertical}" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"   />

        <Grid Name="EastPanel" Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="2" Grid.RowSpan="2" Style="{DynamicResource BorderGrid}" Margin="0,0,0,0">


            <!--<Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>-->

            <TabControl Name="MainTabControl" Grid.Row="0" >
                <TabItem Name="GeneralTab" Header="General">
                    <Border>
                        <DockPanel Name="GeneralPanel" LastChildFill="True" Grid.Row="0" Margin="0,0,0,0" Background="Transparent" >
                            <!--<DockPanel Style="{DynamicResource HeaderDock}"  DockPanel.Dock="Top">
                                <Label Content="General" FontWeight="Bold" Name="GeneralLabel" />
                            </DockPanel>-->
                            <ScrollViewer DockPanel.Dock="Top" Name="WhyDoIHaveABlueBackgroundColor" VerticalScrollBarVisibility="Auto">
                                <TabControl Name="TabTest" DockPanel.Dock="Top">
                                    <TabItem Name="GeneralEditor" Header="Editor" Margin="0,0,0,0" FontSize="18"  Padding="9,0,9,0" BorderThickness="1,0,1,0">
                                        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,0">


                                            <!-- Row 1 -->
                                            <Border DockPanel.Dock="Top"  >
                                                <DockPanel Margin="0,0,0,3">
