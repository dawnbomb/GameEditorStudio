                                                                <Label Content="Unchecked Value" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
                                                                <TextBox x:Name="PropertiesEntryUncheckText" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100" Margin="187,41,0,0" IsEnabled="False"/>
                                                                <Label Content="I'll add this post-release, For now values are always 1 &amp; 0 ^^;" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top"/>

                                                            </Grid>
