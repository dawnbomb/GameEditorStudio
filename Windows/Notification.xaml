<Window x:Class="GameEditorStudio.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameEditorStudio"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Notification" >
    <DockPanel LastChildFill="False">
        <ScrollViewer DockPanel.Dock="Top" MaxHeight="300" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="MessageBox"
               Margin="30,25,30,0"
               FontSize="18"
               TextWrapping="Wrap" Foreground="#FFE6E6E6"/>
        </ScrollViewer>
        <Button x:Name="ButtonOK" Content="Okay :3" HorizontalAlignment="Center" Margin="0,15,0,25"  DockPanel.Dock="Bottom" Height="40" Width="150" Click="ButtonOK_Click"/>
    </DockPanel>
</Window>
