<UserControl x:Class="GameEditorStudio.Community"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameEditorStudio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="0">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Style="{DynamicResource HeaderDock}" Height="30" VerticalAlignment="Top">
                    <Label Content="Community" FontWeight="Bold"/>
                    <Button Content="Add Link" DockPanel.Dock="Right"  Width="100" HorizontalAlignment="Right" Margin="3" Style="{DynamicResource ButtonError}"/>
                    <Button Content="Add Discord" DockPanel.Dock="Right"  Width="114" Margin="3" Style="{DynamicResource ButtonError}"/>
                    <Button Content="Add Forumn" DockPanel.Dock="Right"  Width="111" Margin="3" Style="{DynamicResource ButtonError}"/>
                    <Button Content="Add Mod" DockPanel.Dock="Right"  Width="100" HorizontalAlignment="Right" Margin="3" Style="{DynamicResource ButtonError}"/>
                    <Button Content="Add Text" DockPanel.Dock="Right"  Width="100" HorizontalAlignment="Right" Margin="3" Style="{DynamicResource ButtonError}"/>
                </DockPanel>
                <Label Content="Community will be a feature added in a later update, adding a dedicated location for useful resources.&#xD;&#xA;It will also be great for talking about the latest additions to a workshop, &#xD;&#xA;or posting your name and giving yourself credit as the creator.&#xA;Until then, just use the documentation feature and create a workshop document. "/>

            </DockPanel>
        </Border>
    </Grid>
</UserControl>
