<Window x:Class="GameEditorStudio.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameEditorStudio"
        mc:Ignorable="d"
        Title="Tutorial" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="433*"/>
            <RowDefinition Height="26.04"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" Margin="5,5,5,5">
            <Border  DockPanel.Dock="Bottom"  Height="150" Margin="0,10,0,0">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Style="{DynamicResource ContentBar}" LastChildFill="False">
                        <Label Content="History" FontWeight="Bold"/>
                    </DockPanel>
                    <TreeView x:Name="TreeOfHistory" DockPanel.Dock="Top" SelectedItemChanged="CategoryChanged" >

                    </TreeView>

                </DockPanel>
            </Border>

            <Border  DockPanel.Dock="Top"  >
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Style="{DynamicResource ContentBar}" LastChildFill="False">
                        <Label Content="Categories" FontWeight="Bold"/>
                        <TextBox Name="CategoryNameBox" DockPanel.Dock="Right" MinWidth="120" Margin="5" KeyDown="CategoryNameBoxKeyDown"/>
                    </DockPanel>
                    <Button Name="ButtonNewCategory" Content=" New Category " DockPanel.Dock="Bottom"  Click="NewWikiCategory"/>
                    <TreeView x:Name="TreeOfCategorys" DockPanel.Dock="Top" SelectedItemChanged="CategoryChanged" >

                    </TreeView>

                </DockPanel>
            </Border>


            



        </DockPanel>

        <DockPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" Margin="5,5,5,5">
            <Border  DockPanel.Dock="Bottom"  Height="150" Margin="0,10,0,0">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Style="{DynamicResource ContentBar}" LastChildFill="False">
                        <Label Content="Favorites" FontWeight="Bold"/>
                    </DockPanel>
                    <TreeView x:Name="TreeOfFavorites" DockPanel.Dock="Top" SelectedItemChanged="CategoryChanged" >

                    </TreeView>

                </DockPanel>
            </Border>

            <Border DockPanel.Dock="Top" >
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top" Style="{DynamicResource ContentBar}" LastChildFill="False">
                        <Label Content="Documents" FontWeight="Bold"/>
                        <TextBox DockPanel.Dock="Right" MinWidth="120" Margin="5" Name="DocumentNameBox" KeyDown="DocumentNameBoxKeyDown" />
                    </DockPanel>

                    <Button Name="ButtonNewDocument" Content=" New Document " DockPanel.Dock="Bottom" Click="NewWikiTopic"/>
                    <TreeView x:Name="TreeOfDocuments" SelectedItemChanged="DocumentChanged" >

                    </TreeView>
                </DockPanel>
            </Border>
        </DockPanel>
        

        <Border  Grid.Column="2" Grid.Row="1" Grid.RowSpan="1" Margin="5,5,5,5">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Style="{DynamicResource ContentBar}" LastChildFill="False">
                    <Label Name="DocumentLabel" Content="Info" FontWeight="Bold"/>
                    <Label Content="   PS: Thanks for joining the beta :)" FontWeight="Bold"/>
                    <Button x:Name="ButtonEditMode" Content="Edit Mode" Width="120" Margin="3" DockPanel.Dock="Right" Click="ButtonEditModeClick"/>
                    <Button x:Name="ButtonWriteMode" Content="Write" Width="75" Margin="3" DockPanel.Dock="Right" Click="ButtonWriteModeClick" Visibility="Collapsed"/>
                    <Button x:Name="ButtonReadMode" Content="Read" Width="75" Margin="3" DockPanel.Dock="Right" Click="ButtonReadModeClick" Visibility="Collapsed"/>
                </DockPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="DocumentTextbox" TextChanged="TextboxTextChanged" Margin="10">

                    </TextBox>
                </ScrollViewer>

            </DockPanel>
        </Border>

        <Label Grid.Column="2" Content="Upcoming Feature::   Tutorial History.           Also:   Related Topics." HorizontalAlignment="Left" Margin="39,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="32" Width="831"/>


    </Grid>
</Window>
