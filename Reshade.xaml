<Window x:Class="GameEditorStudio.Reshade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameEditorStudio"
        mc:Ignorable="d"
        Title="Reshade" Height="300" Width="420">
    <Grid>
        <Button Content="Install Reshade to a selected game" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" Width="380" Height="39" Click="ButtonInstallReshade"/>
        <Button Content="Update Reshade Folder in Documents" HorizontalAlignment="Center" VerticalAlignment="Top" Width="380" Height="34" Click="ButtonUpdateReshadeFolder" Margin="0,96,0,0"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="380" Height="42" Click="ButtonCancel"/>

    </Grid>
</Window>
